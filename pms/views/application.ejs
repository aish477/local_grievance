<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-sm-3 col-xm-12"></div>
    <div class="col-md-6 col-sm-6 col-xm-12">
       <form  id="compform"  method="POST" action="/application"  autocomplete="off" style="margin-top:200px; border:2px solid grey; margin-bottom: 200px;">
       <input type="hidden" name="id"value="<%= record._id %>">
         <h1 style="margin-bottom: 40px; text-align: center;">Application</h1>
           <div class="form-group a">
             <p class="b"  >Department:  <%= record.cdepartname %></p >
            </div>
             <div class="form-group a">
               <p class="b" >Name:  <%= record.cname %></p> 
            </div>
            <div class="form-group a">
                <p class="b">Adhar No:  <%= record.adhar %></p>
            </div>
            
            <div class="form-group a">
               <p class="b">contact:  <%= record.contact %></p>

            </div>
            <div class="form-group a">
                <p class="b">Email address:  <%= record.cemail %></p>
              
            </div>
           
            <div class="form-group a">
              <p class="b" >Address(Residential):  <%= record.caddr %></p>
               
              </div>
              
                  <div class="form-group a">
                      <p class="b">Locality:  <%= record.clocality %></p>
                      </div>
                      <div class="form-group a">
                          <p  class="b">Sub-locality:  <%= record.cslocality %></p>
                          </div>
                          <div class="form-group a">
                              <p class="b" >Date:  <%= record.date %></p>
                              </div>
                              <div class="form-group a">
                                  <p class="b" >Subject:  <%= record.subject %></p>
                                  </div>
                                  <div class="form-group a">
                                      <p class="b" >Description:  <%= record.desc %></p>
                                      </div>
                                      
                                      <div class="a">
                                      <textarea name="reason" placeholder="Acception Note/Reason of Rejection " id="" cols="30" rows="10" required></textarea> </div>
                                      <h5 style="text-align: center; color: red;">Note:Accepted complaints are meant to be solved. <br>
                                      Rejected complaints require reason for rejection.</h5>
                                    
                                     <div style="text-align: center;margin-top: 20px;">

                                            <input class="btn-submit btn-lg "    type="submit" name="vote" value="Accept">
                                            <input class="btn-danger btn-lg" type="submit" name="vote" value="Reject">
                                          </div>
                                    </form>
                                    
            
                                     

      

      </div>
